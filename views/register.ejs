<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-[32vw] bg-white px-20 py-10 rounded-[30px]">
  <h1 class="text-4xl text-center font-semibold  text-zinc-700 capitalize leading-none tracking-tighter mb-5">Create new account</h1>
  <form action="/register" method="post">
    <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="Username">
    <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Full Name">
    <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="Email">
    <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="number" placeholder="Number">
    <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="Password">
    <input class="border-2 rounded-full block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account">
    <p class="text-xs font-semibold  text-zinc-700 mt-10 w-2/3 mx-auto text-center">Lorem ipsum dolor sit amet consectetur adipisicing elit. Qui fugit reiciendis nihil voluptatibus necessitatibus suscipit dolor iste, ut ullam laudantium sequi</p>
  </form>
  <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Login Existing Account</a>
  </div>
</div>
<% include ./partials/footer.ejs %>